<%- include('../partials/header.ejs')%>
    <div class="main-block">
        <form action='/users' method='POST'>

            <div class="form_details">
                <label for="firstName">First Name</label>
                <input type="text" id="firstName" name="firstName" class="fixed-width" required>
            </div>

            <div class="form_details">
                <label for="lastName">Last Name</label>
                <input type="text" id="lastName" name="lastName" class="fixed-width" required>
            </div>


            <div class="form_details">
                <label for="email">Email Address</label>
                <input type="email" id="email" name="email" class="fixed-width" required>
            </div>

            <div class="form_details">
                <label for="password">Password</label>
                <input type="password" id="password" name="password" class="fixed-width"  minlength="8" maxlength="64" required>
            </div>

            <div class="form_details">
                <button type="submit" class="button edit-operation"><span>Sign Up</span></button>
            </div>

        </form>

    </div>
    <%- include('../partials/footer.ejs')%>